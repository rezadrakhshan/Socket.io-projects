<!DOCTYPE html>
<html lang="<%= language %>" dir="<%= languageDir %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tic-Tac-Toe</title>
    <link rel="stylesheet" href="public/style/style.css" />
    <link rel="stylesheet" href="public/style/bot-game.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bungee+Tint&family=Poppins:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <div class="left-panel">
        <h1 class="title"><%= user.username %> <%= t("play-with-bot.vs") %> <%= t("play-with-bot.AI") %></h1>
        <div class="board-container">
          <table class="table_overlay">
            <tbody>
              <% for(let i = 0; i < 3; i++) { %>
              <tr>
                <% for(let j = 0; j < 3; j++) { %>
                <td class="cell text" data-cell-index="<%= i*3+j %>"></td>
                <% } %>
              </tr>
              <% } %>
            </tbody>
          </table>
          <div class="board">
            <table>
              <tbody>
                <% for(let i = 0; i < 3; i++) { %>
                <tr>
                  <% for(let j = 0; j < 3; j++) { %>
                  <td class="cell" data-cell-index="<%= i*3+j %>"></td>
                  <% } %>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <hr color="#FFDDAB" />
      <div class="right-panel">
        <div class="info-box">
          <h2><%= t("play-with-bot.game-info.header") %></h2>
          <p><strong><%= t("play-with-bot.game-info.player") %>:</strong> <%= user.username %></p>
          <p><strong><%= t("play-with-bot.game-info.opponent") %>:</strong> <%= t("play-with-bot.AI") %></p>
          <p>
            <strong><%= t("play-with-bot.game-info.turn") %>:</strong> <span id="current-turn">You</span>
          </p>
          <p>
            <strong><%= t("play-with-bot.game-info.status") %>:</strong> <span id="game-status">In Progress</span>
          </p>
          <button id="reset-btn"><%= t("play-with-bot.game-info.restart-btn") %></button>
        </div>
      </div>
    </div>

    <audio id="background-music" autoplay loop>
      <source src="/public/music/bg-music.m4a" type="audio/mpeg" />
    </audio>
    <script src="/src/components/game-bot.js"></script>
    <script src="/src/components/audio.js"></script>
  </body>
</html>
