<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Tic-Tac-Toe</title>
  <link rel="stylesheet" href="/public/style/style.css" />
  <link rel="stylesheet" href="/public/style/profile.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Bungee+Tint&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
    rel="stylesheet"
  />
</head>
<body>
  <div class="container">
    
    <div class="sidebar">
      <h3>Settings</h3>
      <ul>
        <li class="active">Edit Profile</li>
        <li>Change Password</li>
        <li>Link Google Account</li>
        <li>Notifications</li>
        <li>Logout</li>
      </ul>
    </div>

    <div class="card">
      <h2>Update Profile</h2>
      <form action="/api/update" method="POST" enctype="multipart/form-data">
        <div class="avatar-preview">
          <img src="<%= user.profile %>" id="preview" alt="Avatar Preview" />
        </div>

        <label class="file-label">
          <input type="file" name="avatar" id="avatarInput" hidden />
          Change Profile Picture
        </label>

        <input type="text" name="username" value="<%= user.username %>" />
        <input type="password" name="password" placeholder="Set Password" />

        <button type="submit">Save Changes</button>
      </form>
    </div>
    
  </div>

  <script>
    const avatarInput = document.getElementById('avatarInput');
    const preview = document.getElementById('preview');

    avatarInput.addEventListener('change', function () {
      const file = this.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = () => { preview.src = reader.result };
        reader.readAsDataURL(file);
      }
    });
  </script>
</body>
</html>
